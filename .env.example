# Runner Configuration
RUNNER_HOST=127.0.0.1
RUNNER_PORT=8088

# LLM Driver Selection
# Options: 'openai', 'anthropic', 'ollama', or 'arm'
LLM_DRIVER=ollama

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# ARM Configuration
ARM_MODEL_PATH=
ARM_N_CTX=2048
ARM_N_THREADS=4
ARM_N_GPU_LAYERS=-1

# General LLM Configuration
TEMPERATURE=0.7
MAX_TOKENS=1000

# Logging Configuration
LOG_LEVEL=DEBUG

# Retry Configuration
MAX_RETRIES=1
RETRY_DELAY=1

# Database Configuration
# Options: 'sqlite' or 'none'
DB_TYPE=none
DB_PATH=db.sqlite3