# Runner settings
API_KEY=your_api_key_here
RUNNER_HOST=0.0.0.0
RUNNER_PORT=8008

# SSL settings
SSL_KEYFILE=/path/to/your/ssl/key.pem
SSL_CERTFILE=/path/to/your/ssl/cert.pem
AUTO_SSL=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# LLM driver to use (openai, anthropic, ollama, arm)
LLM_DRIVER=openai

# OpenAI settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Ollama settings
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b

# ARM settings
ARM_MODEL_PATH=/path/to/your/arm/model.bin
ARM_N_CTX=2048
ARM_N_THREADS=4
ARM_N_GPU_LAYERS=1

# Default generation parameters
TEMPERATURE=0.7
MAX_TOKENS=1000

# Vector store settings
# Set to 'none' to disable RAG functionality
VECTOR_STORE_TYPE=qdrant

# Qdrant settings (only needed if VECTOR_STORE_TYPE=qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents

# Database settings
DB_TYPE=sqlite
DB_PATH=llm_api_runner.db